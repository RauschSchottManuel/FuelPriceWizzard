{
  "ImplementationAssemblies": [
    {
      "Enabled":  false,
      "FilePath": "..\\..\\..\\..\\MockUpFuelPriceSourceImplementation\\bin\\debug\\net8.0\\MockUpFuelPriceSourceCollectorService.dll",
      "Type": "MockUpFuelPriceSourceImplementation.MockUpFuelPriceService"
    },
    {
      "FilePath": "..\\..\\..\\..\\EControlCollectorService\\bin\\Debug\\net8.0\\EControlCollectorService.dll",
      "Type": "EControlCollectorService.EControlCollectorService"
    }
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "path": "Logs/log.txt",
          "retainingFileCount": 10,
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  }
}